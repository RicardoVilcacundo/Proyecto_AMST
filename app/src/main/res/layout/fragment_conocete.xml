<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título del Fragment -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test de Estado de Ánimo"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:layout_marginBottom="16dp"/>

    <!-- Pregunta 1 -->
    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cómo te sientes hoy?"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupQuestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/feelingHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feliz" />
        <RadioButton
            android:id="@+id/feelingSad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Triste" />
        <RadioButton
            android:id="@+id/feelingNeutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neutral" />
    </RadioGroup>

    <!-- Pregunta 2 -->
    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Estás experimentando algún tipo de estrés?"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupQuestion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/stressedYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí" />
        <RadioButton
            android:id="@+id/stressedNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>

    <!-- Pregunta para escribir -->
    <TextView
        android:id="@+id/question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Hay algo más que te gustaría compartir sobre cómo te sientes?"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/feelingsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe aquí..."
        android:layout_marginTop="8dp"
        android:minHeight="100dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="8dp"/>

    <!-- Botón de guardar -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

</LinearLayout>
