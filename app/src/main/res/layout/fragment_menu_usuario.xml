<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.usuario.Menu_usuario"
    android:background="@color/primario">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:fontFamily="@font/aclonica"
        android:text="Detalles de la cuenta"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetalles"
        android:layout_width="370dp"
        android:layout_height="230dp"
        android:layout_margin="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Avatar (Imagen de perfil o ícono) -->

            <TextView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avatar"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="25dp"
                android:gravity="center" />

            <!-- Nombre de usuario -->
            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de usuario"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="25dp"
                android:gravity="center" />

            <!-- Correo -->
            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="25dp"
                android:gravity="center" />

            <!-- Contraseña (Ocultada) -->
            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_boton"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:text="Cerrar sesión"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewDetalles"
        app:layout_constraintVertical_bias="0.148"
        android:backgroundTint="#CC7575"/>



</androidx.constraintlayout.widget.ConstraintLayout>