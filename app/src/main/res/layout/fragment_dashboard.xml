<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:background="@color/primario">

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:fontFamily="@font/aclonica"
        android:text="Bienestar emocional"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_margin="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351">

        <!-- Contenido centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Esto centra el contenido -->

            <ImageView
                android:id="@+id/imagenTarjeta"
                android:layout_width="116dp"
                android:layout_height="103dp"
                android:contentDescription="Imagen de la tarjeta"
                android:scaleType="centerCrop"
                android:src="@drawable/corazon" />

            <TextView
                android:id="@+id/tituloTarjeta"
                android:layout_width="178dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="Conocete a ti misma"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342">

        <!-- Contenido centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Esto centra el contenido -->

            <ImageView
                android:id="@+id/imagenTarjeta2"
                android:layout_width="116dp"
                android:layout_height="103dp"
                android:contentDescription="Imagen de la tarjeta"
                android:scaleType="centerCrop"
                android:src="@drawable/medalla" />

            <TextView
                android:id="@+id/tituloTarjeta2"
                android:layout_width="178dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="Recomendaciones"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="183dp"
        android:layout_height="183dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.0">

        <!-- Contenido centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"> <!-- Esto centra el contenido -->

            <ImageView
                android:id="@+id/imagenTarjeta3"
                android:layout_width="116dp"
                android:layout_height="103dp"
                android:contentDescription="Imagen de la tarjeta"
                android:scaleType="centerCrop"
                android:src="@drawable/ojos" />

            <TextView
                android:id="@+id/tituloTarjeta3"
                android:layout_width="178dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:text="Ayuda inmediata"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonPruebaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="301dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />


</androidx.constraintlayout.widget.ConstraintLayout>